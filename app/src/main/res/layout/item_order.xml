<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="10dp"
    android:background="@drawable/bg_item"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/order_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="商品名称" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_goods_name"
        android:layout_alignParentLeft="true"
        android:textSize="30dp"
        android:text="0001" />

    <TextView
        android:id="@+id/order_goods_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_goods_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="3斤" />

    <TextView
        android:id="@+id/order_goods_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_goods_standard"
        android:layout_alignParentRight="true"
        android:text="备注：加辣加麻加辣加麻加辣加麻" />
</RelativeLayout>
